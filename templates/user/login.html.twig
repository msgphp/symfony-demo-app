{% extends 'base.html.twig' %}

{% block body %}
    <h1>Login</h1>

    {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_row(form.email, {label: 'E-mail', translation_domain: false}) }}
        {{ form_row(form.password, {label: 'Password', translation_domain: false}) }}
        {{ form_row(form.remember_me, {label: 'Remember me', required: false, translation_domain: false}) }}

        <div>
            <input type="submit" value="Login" />
            <p><a href="{{ url('forgot_password') }}">Forgot password?</a></p>
        </div>
    {{ form_end(form) }}

    <p>Or login using:</p>
    {% include 'partials/oauth_providers.html.twig' %}
{% endblock %}
