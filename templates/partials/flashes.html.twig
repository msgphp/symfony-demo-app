{% set icons = {
    success: '✔ ',
    error: '✗ ',
    warning: '⚠ ',
} %}
{% if flashes|length > 0 %}
    <ul>
    {% for label, messages in flashes %}
        {% for message in messages %}
            <li>{{ (icons[label]|default('')) ~ message }}</li>
        {% endfor %}
    {% endfor %}
    </ul>
{% endif %}
